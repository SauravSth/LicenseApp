<%- include('./partials/header') %>
<body>
	<%- include('./partials/nav')%>
	<main>
		<%- include('./partials/banner') %>

		<form action="/gtest" method="post" id="g-form">
			<h2>Get Details:</h2>
			<label for="licenseno">License Number:</label>
			<input
				type="text"
				name="licenseno"
				id="licenseno"
				placeholder="1234567890"
			/>
			<span class="err"></span>
			<button>Submit</button>
		</form>

		<% if (exists && locals.userData) { %>
		<table>
			<thead>
				<tr>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Age</th>
					<th>License Number</th>
					<th>Make</th>
					<th>Model</th>
					<th>Year</th>
					<th>Plate Number</th>
					<th colspan="2">Profile Options</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= userData.firstName %></td>
					<td><%= userData.lastName %></td>
					<td><%= userData.age %></td>
					<td><%= userData.licenseNo %></td>
					<td><%= userData.carDetails.make %></td>
					<td><%= userData.carDetails.model %></td>
					<td><%= userData.carDetails.year %></td>
					<td><%= userData.carDetails.plateNo %></td>
					<td>
						<a
							href="/editDetails/<%= userData.licenseNo %>"
							class="edit"
							>Edit</a
						>
					</td>
					<td>
						<a
							href="/delete/<%= userData.licenseNo %>"
							class="delete"
							>Delete</a
						>
					</td>
				</tr>
			</tbody>
		</table>
		<% } else if (exists == false) {%>
		<div class="search-result">
			<h2>Given license number does not exist</h2>
			<a href="/g2Test">Go To G2 Page</a>
		</div>
		<% } %>
	</main>
</body>
<%- include('./partials/footer') %>
