<%- include('./partials/header') %>
<body>
	<%- include('./partials/nav')%>
	<main>
		<%- include('./partials/banner') %> <% if (exists && locals.userData) {
		%>
		<table>
			<thead>
				<tr>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Age</th>
					<th>License Number</th>
					<th>Make</th>
					<th>Model</th>
					<th>Year</th>
					<th>Plate Number</th>
					<% if (userData.licenseNo != 'DEFAULT') { %>
					<th colspan="2">Profile Options</th>
					<% } %>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= userData.firstName %></td>
					<td><%= userData.lastName %></td>
					<td><%= userData.age %></td>
					<td><%= userData.licenseNo %></td>
					<td><%= userData.carDetails.make %></td>
					<td><%= userData.carDetails.model %></td>
					<td><%= userData.carDetails.year %></td>
					<td><%= userData.carDetails.plateNo %></td>
					<% if (userData.licenseNo != 'DEFAULT') { %>
					<td>
						<a href="/editDetails" class="edit">Edit</a>
					</td>
					<td>
						<a href="/delete/<%= userData._id %>" class="delete"
							>Delete</a
						>
					</td>
					<% } %>
				</tr>
			</tbody>
		</table>
		<% } else if (exists == false) {%>
		<div class="search-result">
			<h2>Given license number does not exist</h2>
			<a href="/g2Test">Go To G2 Page</a>
		</div>
		<% } %>
	</main>
</body>
<%- include('./partials/footer') %>
